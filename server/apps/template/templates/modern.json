{
  "templateId": "modern",
  "name": "Modern",
  "version": "1.0.0",
  "description": "Two-column layout with sidebar for contact and skills, featuring modern typography and clean spacing.",
  "author": "CareerCraft",
  "tags": ["resume", "modern", "two-column", "sidebar"],
  "previewUrl": "",
  "schemaJson": {
    "componentId": "modern",
    "layout": {
      "rootStyle": {
        "width": "210mm",
        "minHeight": "297mm",
        "backgroundColor": "#ffffff",
        "color": "#0f172a"
      },
      "paddingStyle": {
        "padding": "2.5rem"
      },
      "header": {
        "containerStyle": {
          "borderLeftWidth": "6px",
          "borderColor": "#2563eb",
          "marginBottom": "1.5rem",
          "paddingLeft": "1rem"
        },
        "nameStyle": {
          "fontSize": "3rem",
          "fontWeight": "700",
          "letterSpacing": "-0.025em",
          "color": "#0f172a"
        },
        "titleStyle": {
          "fontSize": "1.125rem",
          "color": "#475569"
        }
      },
      "body": {
        "containerStyle": {
          "display": "grid",
          "gridTemplateColumns": "repeat(3, minmax(0, 1fr))",
          "gap": "2rem"
        },
        "columns": [
          {
            "id": "sidebar",
            "span": 1,
            "containerStyle": {
              "gridColumn": "span 1 / span 1"
            },
            "sections": ["contact", "skills"]
          },
          {
            "id": "main",
            "span": 2,
            "containerStyle": {
              "gridColumn": "span 2 / span 2"
            },
            "sections": ["summary", "experience", "education", "projects"]
          }
        ]
      }
    },
    "sections": [
      {
        "id": "contact",
        "type": "contact",
        "title": "Contact",
        "titleStyle": {
          "fontSize": "1rem",
          "fontWeight": "700",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "color": "#2563eb"
        },
        "containerStyle": {
          "marginBottom": "1rem"
        },
        "contentStyle": {},
        "itemStyle": {
          "fontSize": "0.875rem",
          "color": "#334155",
          "wordBreak": "break-word"
        },
        "fields": ["email", "phone", "location", "website"]
      },
      {
        "id": "skills",
        "type": "skills",
        "title": "Skills",
        "titleStyle": {
          "fontSize": "1rem",
          "fontWeight": "700",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "color": "#2563eb"
        },
        "containerStyle": {},
        "contentStyle": {
          "display": "flex",
          "flexWrap": "wrap",
          "gap": "0.5rem"
        },
        "pillStyle": {
          "fontSize": "0.75rem",
          "backgroundColor": "#f1f5f9",
          "color": "#334155",
          "borderRadius": "0.375rem",
          "fontWeight": "500"
        }
      },
      {
        "id": "summary",
        "type": "summary",
        "title": "Profile",
        "titleStyle": {
          "fontSize": "1rem",
          "fontWeight": "700",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "color": "#2563eb"
        },
        "containerStyle": {
          "marginBottom": "1rem"
        },
        "contentStyle": {
          "fontSize": "0.875rem",
          "lineHeight": "1.625",
          "color": "#334155"
        }
      },
      {
        "id": "experience",
        "type": "experience",
        "title": "Experience",
        "titleStyle": {
          "fontSize": "1rem",
          "fontWeight": "700",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "color": "#2563eb"
        },
        "containerStyle": {
          "marginBottom": "1rem"
        },
        "itemStyle": {},
        "headerStyle": {
          "display": "flex",
          "justifyContent": "space-between",
          "alignItems": "flex-start",
          "gap": "1rem"
        },
        "roleStyle": {
          "fontSize": "1rem",
          "fontWeight": "600",
          "color": "#0f172a"
        },
        "companyStyle": {
          "fontSize": "1rem",
          "color": "#475569"
        },
        "dateStyle": {
          "fontSize": "0.875rem",
          "color": "#64748b",
          "whiteSpace": "nowrap"
        },
        "listStyle": {
          "listStyleType": "disc",
          "fontSize": "0.875rem",
          "color": "#334155",
          "lineHeight": "1.625",
          "paddingLeft": "1.25rem",
          "marginBottom": "0.5rem"
        }
      },
      {
        "id": "education",
        "type": "education",
        "title": "Education",
        "titleStyle": {
          "fontSize": "1rem",
          "fontWeight": "700",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "color": "#2563eb"
        },
        "containerStyle": {
          "marginBottom": "1rem"
        },
        "headerStyle": {
          "display": "flex",
          "justifyContent": "space-between",
          "alignItems": "flex-start",
          "gap": "1rem"
        },
        "dateStyle": {
          "fontSize": "0.875rem",
          "color": "#64748b",
          "whiteSpace": "nowrap"
        },
        "schoolStyle": {
          "fontSize": "1rem",
          "fontWeight": "600",
          "color": "#1e293b"
        },
        "detailsStyle": {
          "fontSize": "0.875rem",
          "color": "#475569"
        }
      },
      {
        "id": "projects",
        "type": "projects",
        "title": "Projects",
        "titleStyle": {
          "fontSize": "1rem",
          "fontWeight": "700",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "color": "#2563eb"
        },
        "containerStyle": {},
        "nameStyle": {
          "fontSize": "1rem",
          "fontWeight": "600",
          "color": "#1e293b"
        },
        "linkStyle": {
          "textDecoration": "underline",
          "color": "#2563eb"
        },
        "descriptionStyle": {
          "fontSize": "0.875rem",
          "color": "#475569"
        },
        "toggleField": "showProjects"
      }
    ]
  },
  "hintJson": {
    "layout": "Sidebar keeps contact details visible while the main column highlights content.",
    "experience": [
      "Use strong action verbs and quantify achievements.",
      "Keep bullet points conciseâ€”no more than two lines each."
    ],
    "projects": "Toggle the projects section off with `showProjects` if you prefer a shorter resume."
  }
}
