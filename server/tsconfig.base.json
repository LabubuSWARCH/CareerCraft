{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@pkg/*": ["pkg/*/src"]
    }
  },
  "include": ["apps/*/src/**/*.ts", "packages/*/src/**/*.ts"],
  "exclude": ["node_modules", "**/dist"]
}
