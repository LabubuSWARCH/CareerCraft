  },
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"jane.doe\",\n  \"password\": \"Passw0rd!\",\n  \"full_name\": \"Jane Doe\",\n  \"email\": \"jane.doe@example.com\",\n  \"phone\": \"+1-555-0100\",\n  \"address\": \"123 Example Street, Test City\",\n  \"profile_picture\": \"https://example.com/avatar.png\"\n}"
            },
            "url": {
              "raw": "{{auth_base_url}}/register",
              "host": [
                "{{auth_base_url}}"
              ],
              "path": [
                "register"
              ]
            },
            "description": "Create a new user record in Postgres. All fields except username and password are optional."
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"jane.doe\",\n  \"password\": \"Passw0rd!\"\n}"
            },
            "url": {
              "raw": "{{auth_base_url}}/login",
              "host": [
                "{{auth_base_url}}"
              ],
              "path": [
                "login"
              ]
            },
            "description": "Authenticate a user. On success the response includes a `token` and sets the `SESSION_TOKEN` cookie."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login succeeded', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "let jsonData;",
                  "try {",
                  "  jsonData = pm.response.json();",
                  "} catch (err) {",
                  "  jsonData = null;",
                  "}",
                  "if (jsonData && jsonData.token) {",
                  "  pm.environment.set('session_token', jsonData.token);",
                  "  pm.collectionVariables.set('session_token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{auth_base_url}}/profile",
              "host": [
                "{{auth_base_url}}"
              ],
              "path": [
                "profile"
              ]
            },
            "description": "Return the currently authenticated user's profile. Requires the `SESSION_TOKEN` cookie to be present."
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{auth_base_url}}/logout",
              "host": [
                "{{auth_base_url}}"
              ],
              "path": [
                "logout"
              ]
            },
            "description": "Invalidate the active session and clear the cookie."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Logged out', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.environment.unset('session_token');",
                  "pm.collectionVariables.unset('session_token');"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Template Service",
      "item": [
        {
          "name": "List Templates",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{template_base_url}}",
              "host": [
                "{{template_base_url}}"
              ]
            },
            "description": "Fetch all templates stored in MongoDB."
          },
          "response": []
        },
        {
          "name": "Get Template",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{template_base_url}}/{{template_id}}",
              "host": [
                "{{template_base_url}}"
              ],
              "path": [
                "{{template_id}}"
              ]
            },
            "description": "Retrieve a single template by its `templateId`."
          },
          "response": []
        },
        {
          "name": "Create Template",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{session_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"templateId\": \"resume-basic\",\n  \"name\": \"Resume Basic\",\n  \"version\": \"1.0.0\",\n  \"description\": \"Simple single-column resume template\",\n  \"author\": \"CareerCraft\",\n  \"tags\": [\"resume\", \"starter\"],\n  \"previewUrl\": \"https://example.com/preview.png\",\n  \"schemaJson\": {\n    \"sections\": [\n      {\n        \"id\": \"summary\",\n        \"title\": \"Summary\",\n        \"fields\": [\n          { \"id\": \"headline\", \"label\": \"Headline\" },\n          { \"id\": \"body\", \"label\": \"Body\", \"type\": \"textarea\" }\n        ]\n      }\n    ]\n  },\n  \"hintJson\": {\n    \"summary\": \"Keep it short and impactful.\"\n  }\n}"
            },
            "url": {
              "raw": "{{template_base_url}}",
              "host": [
                "{{template_base_url}}"
              ]
            },
            "description": "Insert a new template. Requires a valid session token."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Template created', function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "",
                  "let jsonData;",
                  "try {",
                  "  jsonData = pm.response.json();",
                  "} catch (err) {",
                  "  jsonData = null;",
                  "}",
                  "if (jsonData && jsonData.templateId) {",
                  "  pm.environment.set('template_id', jsonData.templateId);",
                  "  pm.collectionVariables.set('template_id', jsonData.templateId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Update Template",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{session_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Updated description for the template\",\n  \"tags\": [\"resume\", \"updated\"],\n  \"previewUrl\": \"https://example.com/preview-updated.png\"\n}"
            },
            "url": {
              "raw": "{{template_base_url}}/{{template_id}}",
              "host": [
                "{{template_base_url}}"
              ],
              "path": [
                "{{template_id}}"
              ]
            },
            "description": "Patch an existing template by ID. Only the provided fields are updated."
          },
          "response": []
        },
        {
          "name": "Delete Template",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{session_token}}"
              }
            ],
            "url": {
              "raw": "{{template_base_url}}/{{template_id}}",
              "host": [
                "{{template_base_url}}"
              ],
              "path": [
                "{{template_id}}"
              ]
            },
            "description": "Remove a template. Returns 204 when the deletion succeeds."
          },
          "response": []
        }
      ]
    }
